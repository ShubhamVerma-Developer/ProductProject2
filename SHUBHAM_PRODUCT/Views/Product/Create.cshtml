@model SHUBHAM_PRODUCT.Models.ProductModel


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div>
        <form asp-action="Create" method="POST" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />


            <div class="form-group">
                <label for="CategoryId">Select an Category:</label>
                <select asp-for="CategoryId" id="CategoryId" name="CategoryId" class="form-control">
                    <option value="">Select an Category</option> <!-- Default/placeholder option -->
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Items)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>




            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <br />

            @* <div class="form-group">
                <label asp-for="Type" class="control-label"></label><br />
                <div class="form-check form-check-inline">
                    <input asp-for="Type" class="form-check-input" type="radio" name="Type" id="TypeId" value="Type 1">
                    <label class="form-check-label">Type 1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for ="Type" class="form-check-input" type="radio" name="Type" id="TypeId" value="Type 2">
                    <label class="form-check-label" >Type 2</label>
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div> *@




            <div class="form-group">
                <label>Choose the product Type:</label>
                <div>
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.TypeItems)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="@item.Value" name="TypeId" value="@item.Value">
                            <label class="form-check-label" for="@item.Value">
                                @item.Text
                            </label>
                        </div>
                    }
                </div>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>





            <br />

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" name="ImageFile" data-val="true" data-val-required="Please Select a Image." />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
